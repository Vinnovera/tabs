*[class^="arrow-"]
	height 32px
	width 32px
	text-indent -9999px
	background blue-darker
	box-shadow none
	line-height 0
	position relative
	cursor pointer
	margin 4px
	box-sizing border-box
	&::after
		position absolute
		top 0
		left 0
		content ''
		height inherit
		width inherit
		display block
		background url('../images/arrow.svg') no-repeat center center
	&.arrow-left::after
		transform rotate(180deg)
	&.arrow-down::after
		transform rotate(90deg)
	&:hover
		background blue
	&:active
		box-shadow none