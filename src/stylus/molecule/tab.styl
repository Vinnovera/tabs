.tab
	width 190px
	height 60px
	display block
	color cream
	position relative
	cursor pointer
	float left
	overflow hidden
	margin-left -32px
	z-index 1

	//******* Pin *****//
	.pin
		width 100%
		height 10px
		&::before
			content ''
			width 14px
			height 14px
			position absolute
			background blue
			top 0
			z-index 10
			left 50%
			margin-left -5px
			border-radius 50%
			display none
			border 2px solid blue-dark
			box-sizing border-box
			box-shadow(inset 1px, 2px, 3px rgba(0,0,0,0.5))
		&:hover::before
				background darken(orange,15%)
				border-width 2px
				
	&:hover .pin::before
		border-width 1px
		display block
	&:active, &:focus
		&::before
			border-width 2px
	&.pinned .pin::before
		background orange
		box-shadow none
		display block
	//******* Pin *****//

	.tab-content
	.close
		z-index 2
	.tab-content
		position relative
		padding 16px 16% 0
		>.title
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			font-weight bold
			font-size 1.15em
			padding 0 0 1px
			line-height 22px
			>.icon
				position relative
				float left
				text-indent -9999px
				width 16px
				height 16px
				transition opacity .06s linear
				background-repeat no-repeat
				background-position center center
				margin 0 5px 0 0
	.close
		position absolute
		text-indent -9999px
		top 9px
		right 16%
		background url('../images/close_icon_8px.svg') no-repeat center center
		width 12px
		height 12px
		display block
		opacity 0
		transition opacity .06s linear
	&.active .close
		background-image url('../images/close_icon_8px_active.svg')

	&:hover
		&:before
			background blue-grey
			
		.close
			opacity 1
	
	//Polygon Shape background
	&:before
	&:after
		content ''
		position absolute
		-webkit-clip-path polygon(14% 0, 86% 0, 100% 100%, 0 100%)
		clip-path polygon(14% 0, 86% 0, 100% 100%, 0 100%)
		top 7px
		bottom 0
		left 3px
		right 3px
	&:before
		background blue
		z-index 2
		transition background .06s linear
	&:after
		left 0
		right 0
		background blue-dark
		z-index 1
	&.active
		color blue
		z-index 9999
		&:before
			background cream

	&.type-search
		.icon
			background-image url('../images/search_icon_16px.svg')
		&.active
			.icon
				background-image url('../images/search_icon_16px_active.svg')
	&.type-volume
		.icon
			background-image url('../images/volume_icon_16px.svg')
		&.active
			.icon
				background-image url('../images/volume_icon_16px_active.svg')
		
	
	